-- Function extensionality
f : T -> T
f := \a. a

g : T -> T
g := \b. b

p : (a : T) -> f a = g a
p := \c. refl[c]

#check funext(p)

homotopic : (A : U) -> (B : U) -> (f : A -> B) -> (g : A -> B) -> U
homotopic := \A. \B. \f. \g. (a : A) -> f a = g a

#eval homotopic

